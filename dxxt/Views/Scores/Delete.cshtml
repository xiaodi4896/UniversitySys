@model dxxt.Models.ScoreStuSub

@{
    ViewData["Title"] = "Delete Score";
}

<h1>Delete Score</h1>
<hr />
<div>
    <h4>Are you sure you want to delete this score?</h4>
    <dl class="row">
        <dt class="col-sm-2">Student</dt>
        <dd class="col-sm-10">@Model.StudentName</dd>
        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.SubjectName</dd>
        <dt class="col-sm-2">Marks</dt>
        <dd class="col-sm-10">@Model.Marks</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ScoreID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
