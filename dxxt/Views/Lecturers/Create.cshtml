@model dxxt.Models.Lecturer

@{
    ViewData["Title"] = "Create Lecturer";
}

<h1>Create Lecturer</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LecturerName" class="control-label">Lecturer Name</label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
